<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <servlet>
        <servlet-name>spring</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>spring</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>useJavaAnnotation</servlet-name>
        <servlet-class>org.springframework.data.mongodb.examples.servlet.UseJavaAnnotationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>useJavaAnnotation</servlet-name>
        <url-pattern>/useJavaAnnotation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>useXMLFileConfig</servlet-name>
        <servlet-class>org.springframework.data.mongodb.examples.servlet.UseXMLFileConfigServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>useXMLFileConfig</servlet-name>
        <url-pattern>/useXMLFileConfig</url-pattern>
    </servlet-mapping>


    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

</web-app>
