<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zccoder.mybatis1.ch8.ssm.dao.UserMapper">


    <resultMap id="baseResultMap" type="com.zccoder.mybatis1.ch8.ssm.dao.po.UserPO">
        <id column="id" property="id"/>
        <result column="user_name" property="userName"/>
        <result column="birthday" property="birthday"/>
        <result column="sex" property="sex"/>
        <result column="mobile" property="mobile"/>
        <result column="email" property="email"/>
        <result column="note" property="note"/>
    </resultMap>

    <sql id="baseColumns">
        id,user_name,birthday,sex,mobile,email,note
    </sql>
    <sql id="baseColumnsInsert">
        user_name,birthday,sex,mobile,email,note
    </sql>

    <insert id="insert" parameterType="com.zccoder.mybatis1.ch8.ssm.dao.po.UserPO">
        INSERT INTO t_user(<include refid="baseColumnsInsert" />)
        VALUES (#{userName},#{birthday},#{sex},#{mobile},#{email},#{note})
    </insert>

    <update id="update" parameterType="com.zccoder.mybatis1.ch8.ssm.dao.po.UserPO">
        update t_user
        <set>
            <if test="userName != null">user_name = #{userName},</if>
            <if test="sex != null">sex = #{sex},</if>
            <if test="mobile != null">mobile = #{mobile},</if>
            <if test="email != null">email = #{email},</if>
            <if test="note != null">note = #{note}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        delete from t_user where id=#{id}
    </delete>

    <select id="findOne" parameterType="int" resultType="role">
        select <include refid="baseColumns" /> from t_user where id=#{id}
    </select>

    <select id="list" parameterType="string" resultType="role">
        select <include refid="baseColumns" /> from t_user where userName like concat('%',#{roleName},'%')
    </select>

</mapper>